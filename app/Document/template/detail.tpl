<div class="row mb-4">
    <div class="card p-0 w-100">
        <div class="card-header">
            <h2>Class: <!--name--></h2>
        </div>
        <div class="card-body">
            <pre class="card-text"><!--doc--></pre>
        </div>
    </div>
</div>

<table class="table table-striped border">
    <tbody>
    <!--loop:start key="item"-->
    <tr>
        <th scope="row"><!--item_no--></th>
        <td><b><!--item_name--></b><pre><!--item_doc--></pre></td>
    </tr>
    <!--loop:end-->
    </tbody>
</table>